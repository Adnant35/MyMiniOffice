        setIconImage(Toolkit.getDefaultToolkit().getImage(getClass().getResource("favicon_1.png")));
                
                
                }
    private void jButton2MouseClicked(java.awt.event.MouseEvent evt) {                                      

        String a = jTextField1.getText();
        String b = jPasswordField1.getText();
        try {
            int sayac=0;
            Class.forName("com.microsoft.sqlserver.jdbc.SQLServerDriver");
            Connection con = DriverManager.getConnection("jdbc:sqlserver://localhost:1433;user=admin1;password=adnan3553;databaseName=kurum;");
            Statement st = con.createStatement();
            String q = "Select Kullanıcı.Username,Kullanıcı.password from Kullanıcı";
            ResultSet rs = st.executeQuery(q);
            while (rs.next()) {
                String Username = rs.getString("Username");
                String pass = rs.getString("password");

                if (a.equals(Username) && pass.equals(b)) {
                    Menu mn = new Menu();
                    mn.setVisible(true);
                    mn.pack();
                    mn.setLocationRelativeTo(null);
                    mn.setDefaultCloseOperation(Giris.EXIT_ON_CLOSE);
                    this.dispose();
                    sayac++;

                } 

            }
                    if (sayac==0) {
                        JOptionPane.showMessageDialog(rootPane, "Yanlış Şifre tekrar deneyiniz.");
                
            }
                    
                

        } catch (Exception e) {
        }


    }                                     

